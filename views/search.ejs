<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Search</title>
</head>

<body>
    <%- include('./partials/header') %>
    <div class="container">
        <% if(error) { %>
            <h2 class="error">
                <%= error %>
            </h2>
        <% } %>
        <%- include('./partials/search-form', {title: title}) %> 
        <div class="results-container">
            <h1>Search Results For <%= title %>: </h1>
            <% if(results) { results.forEach(result=> {%>
                <div class="result">
                    <% images="http://image.tmdb.org/t/p/w500" +result.poster_path %>
                    <% img2="http://image.tmdb.org/t/p/original" +result.backdrop_path %>
                    <div class="img-container">
                        <div class="rating" title="Rating"><%= result.vote_average*10 %>%</div>
                        <% if(result.poster_path==undefined){ %>
                        <img
                            class='poster'
                            src='https://upload.wikimedia.org/wikipedia/commons/thumb/4/41/Noimage.svg/739px-Noimage.svg.png'
                            alt="Card image cap">
                        <% } else { %>
                            <img class='poster' src=<%=images %> alt="poster">
                        <% } %>
                    </div>
                    <div class="details">
                        <%
                            let year, title, type
                            if(result.media_type === 'movie') {
                                year= result.release_date && result.release_date.substring(0,4)
                                title = result.title
                                type = 'Movie'
                            } else if(result.media_type === 'tv') {
                                year= result.first_air_date && result.first_air_date.substring(0,4)
                                title = result.name
                                type = 'Tv Series'
                            }
                        %>
                        <h2><%= `${title} (${year ? year:'-'})` %></h2>
                        <strong class="type" ><%= `${type}` %> </strong>
                        <p><%= result.overview %></p>
                        <form action="/search/<%= result.media_type %>/<%= result.id %>" method="get">
                            <button class="btn" type="submit">
                                More Info
                            </button>
                        </form>
                    </div>
                </div>
            <%}) } %>
        </div>
    </div>
</body>
</html>